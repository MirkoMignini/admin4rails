.btn-group
  %button.btn.btn-xs.btn-primary.dropdown-toggle{'data-toggle' => 'dropdown', type: 'button'}
    = grid_label('actions', 'label')
    %span.caret

  %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
    %li
      = link_to grid_label('actions', 'show'), show_path(record)
    %li
      = link_to grid_label('actions', 'edit'), edit_path(record)
    %li.divider
    %li
      = link_to grid_label('actions', 'delete'), delete_path(record), :method => :delete, :data => { :confirm => grid_label('actions', 'delete_confirm') }, class: 'bg-danger'
