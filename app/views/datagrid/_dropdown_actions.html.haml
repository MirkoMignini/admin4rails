.btn-group
  %button.btn.btn-xs.btn-primary.dropdown-toggle{'data-toggle' => 'dropdown', type: 'button'}
    Actions
    %span.caret

  %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
    %li
      = link_to 'Show', show_path(record)
    %li
      = link_to 'Edit', edit_path(record)
    %li.divider
    %li
      = link_to 'Delete', delete_path(record), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'bg-danger'
