.btn-group
  %button.btn.btn-xs.btn-primary.dropdown-toggle{'data-toggle' => 'dropdown', type: 'button'}
    Actions
    %span.caret

  %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
    %li
      = link_to 'Show', resource.show_path(record)
    %li
      = link_to 'Edit', resource.edit_path(record)
    %li.divider
    %li
      = link_to 'Delete', record, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'bg-danger'
