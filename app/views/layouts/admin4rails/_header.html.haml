%header.main-header
  / Logo
  = link_to(root_path, class: 'logo') do
    / mini logo for sidebar mini 50x50 pixels
    %span.logo-mini
      = Admin4rails.header.logo.text_mini.html_safe
    / logo for regular state and mobile devices
    %span.logo-lg
      = Admin4rails.header.logo.text.html_safe
  / Header Navbar: style can be found in header.less
  %nav.navbar.navbar-static-top{role: "navigation"}
    / Sidebar toggle button
    %a.sidebar-toggle{"data-toggle" => "offcanvas", href: "#", role: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-custom-menu
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            = current_admin_user.to_s
          %ul.dropdown-menu
            %li
              = link_to 'Profile', current_admin_user
              = link_to 'Sign out', Rails.application.routes.url_helpers.destroy_admin_user_session_path, method: :delete
